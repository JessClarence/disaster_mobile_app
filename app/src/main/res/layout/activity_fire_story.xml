<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fire_1"
    tools:context=".FireStory">

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="@string/desc_manual_button_close"
        android:onClick="closePage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:srcCompat="@drawable/button_close" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="@string/desc_manual_button_next"
        android:onClick="nextPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956"
        app:srcCompat="@drawable/button_next" />
</androidx.constraintlayout.widget.ConstraintLayout>